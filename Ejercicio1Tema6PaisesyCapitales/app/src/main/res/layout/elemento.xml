<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_marginBottom="16dp"> <!-- Añade espacio entre elementos -->

    <!-- Imagen opcional de la bandera -->
<ImageView
    android:id="@+id/imagenBandera"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginEnd="8dp"
    android:contentDescription="Bandera del país" />

    <!-- Nombre del País -->
<TextView
    android:id="@+id/texto1"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:textSize="18sp"
    android:padding="10dp"
    android:textColor="#333333"
    android:paddingStart="8dp"
    android:text="Nombre del País" />

    <!-- Nombre de la Capital -->
<TextView
    android:id="@+id/texto2"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:textSize="18sp"
    android:textColor="#666666"
    android:text="Capital" />

</LinearLayout>
